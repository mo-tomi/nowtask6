<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="12dp">

    <!-- ヘッダー -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/widget_gauge_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="24時間ゲージ"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/widget_current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- ゲージバー全体 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="#F0F0F0">

        <!-- 経過時間 + 予定時間用のProgressBar -->
        <ProgressBar
            android:id="@+id/widget_gauge_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:progress="0"
            android:max="100"
            android:progressDrawable="@android:drawable/progress_horizontal"
            android:progressTint="#333333"
            android:progressBackgroundTint="#CCCCCC"
            android:secondaryProgress="0"
            android:secondaryProgressTint="#CCCCCC" />
    </RelativeLayout>

    <!-- 時刻ラベル -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="2dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0:00"
            android:textSize="10sp"
            android:textColor="#666666"
            android:gravity="start" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="6:00"
            android:textSize="10sp"
            android:textColor="#666666"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="12:00"
            android:textSize="10sp"
            android:textColor="#666666"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="18:00"
            android:textSize="10sp"
            android:textColor="#666666"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="24:00"
            android:textSize="10sp"
            android:textColor="#666666"
            android:gravity="end" />
    </LinearLayout>

    <!-- 情報表示 -->
    <TextView
        android:id="@+id/widget_free_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="空き時間: 0時間0分"
        android:textSize="14sp"
        android:textColor="#000000"
        android:paddingTop="12dp" />

</LinearLayout>
